{
  "expo": {
    "name": "marketplace-app",
    "slug": "marketplace-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "marketplace",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "bundleIdentifier": "giovannyexpo.marketplaceapp",
      "supportsTablet": true
    },
    "android": {
      "package": "giovannyexpo.marketplaceapp",
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#00008B",
          "dark": {
            "backgroundColor": "#00aae4"
          }
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite seleccionar fotos para tus publicaciones.",
          "cameraPermission": "Permite tomar fotos para tus publicaciones."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permite usar tu ubicación para ubicar la publicación en el mapa."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f4e84d72-7fb9-4e42-8bab-dc1ae10b18d7"
      }
    }
  }
}
